{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: Backend (.NET)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build: backend",
            "program": "${workspaceFolder}/MySvelteApp.Server/bin/Debug/net9.0/MySvelteApp.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/MySvelteApp.Server",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Debug: Frontend (Svelte)",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/MySvelteApp.Client",
            "presentation": {
                "hidden": false,
                "group": "Frontend",
                "order": 1
            }
        },
        {
            "name": "Launch: Frontend (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/MySvelteApp.Client/src",
            "sourceMaps": true,
            "preLaunchTask": "run: frontend"
        },
        {
            "name": "Launch: Frontend (Edge)",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/MySvelteApp.Client/src",
            "sourceMaps": true,
            "preLaunchTask": "run: frontend"
        },
        {
            "name": "Generate: API Classes",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run generate-api-classes",
            "cwd": "${workspaceFolder}/MySvelteApp.Client",
            "presentation": {
                "hidden": false,
                "group": "Tools",
                "order": 1
            }
        }
    ]
}
