{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build: backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/MySvelteApp.Server/MySvelteApp.Server.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build: solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/svelte-NET-Test.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run: backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/MySvelteApp.Server/MySvelteApp.Server.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "run: frontend",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/MySvelteApp.Client"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        },
        {
            "label": "generate: api",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "generate"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "install: frontend",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/MySvelteApp.Client"
            },
            "group": "build"
        },
        {
            "label": "generate: api-classes",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "generate-api-classes"
            ],
            "options": {
                "cwd": "${workspaceFolder}/MySvelteApp.Client"
            },
            "group": "build"
        }
    ]
}
